<p id="notice"><%= notice %></p>

<h1>Survey</h1>


  <div class="survey-slider">
    
    <% @questions.each do |question| %>
    <div>
      <div id="question_<%= question.id %>" style="text-align: center">
        <span style="font-size: 25px"><%= question.question %></span>
        <div class="container">
          <% for answer in question.answers %>
            <%= link_to answer.answer, survey_answers_path(:vote_id => 2, :question_id => question.id, :answer_id => answer.id), method: :post, class: "btn btn-info btn-block", remote: true %>
          <% end %>
        </div>  
      </div>
    </div>
    <% end %>
    <div style="text-align: center;">
      <span style="font-size: 30px;">THANK YOU</span>
    </div>
  </div>
<br>

<script type="text/javascript">
$(document).ready(function(){
  $('.survey-slider').slick({
    slidesToShow: 1,
    slidesToScroll: 1,
    arrows: false,
    infinite: false
  });
});
</script>

