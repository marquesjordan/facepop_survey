<script>
function playPause(clicked_id) {

    var clicked_video = 'video' + clicked_id;
    var myVideo = document.getElementById(clicked_video);
    var controllerImage = document.getElementById(clicked_id);

    if (myVideo.paused) {
        myVideo.play();
        $('#'+clicked_id).hide();
    }

    myVideo.onended = function() {
      $('#'+clicked_id).show();
      controllerImage.src = 'https://s3-us-west-2.amazonaws.com/facepop/play-button.png';
    };

}
</script>
